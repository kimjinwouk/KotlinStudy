<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_option_10">


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="버스카드판매대"
        android:textColor="@color/black"
        android:textSize="@dimen/txtsize_option_18"
        android:textStyle="bold"
        android:fontFamily="@font/gmarketsansttfmedium"
        android:paddingTop="@dimen/padding_option_10"
        android:paddingBottom="@dimen/padding_option_10"
        />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="장소"
        android:textColor="#999999"
        android:textSize="@dimen/txtsize_option_16"
        android:paddingTop="@dimen/padding_option_5"
        android:paddingBottom="@dimen/padding_option_5"
        />

    <TextView
        android:id="@+id/tv_address_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_address"
        app:layout_constraintBottom_toBottomOf="@id/tv_address"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/padding_option_30"
        android:text="서울 관악구 신림로 1234서울 관악구 신림로 12345서울 관악구 신림로 12345서울 관악구 신림로 12345서울 관악구 신림로 12345서울 관악구 신림로 123455"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="@dimen/txtsize_option_16"
        android:paddingTop="@dimen/padding_option_5"
        android:paddingBottom="@dimen/padding_option_5"
        />


    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_address"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="구분"
        android:textColor="#999999"
        android:textSize="@dimen/txtsize_option_16"
        android:paddingTop="@dimen/padding_option_5"
        android:paddingBottom="@dimen/padding_option_5"
        />

    <TextView
        android:id="@+id/tv_type_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_type"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_type"
        android:layout_marginLeft="@dimen/padding_option_30"
        android:text="수동"
        android:textColor="@color/black"
        android:textSize="@dimen/txtsize_option_16"
        android:paddingTop="@dimen/padding_option_5"
        android:paddingBottom="@dimen/padding_option_5"
        />



</androidx.constraintlayout.widget.ConstraintLayout>